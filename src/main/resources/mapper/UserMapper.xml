<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.expense_tracker.mapper.UserMapper">

    <update id="updateCurrencyUnit">
        UPDATE user
        SET currency_unit = #{currencyUnit}
        WHERE id = #{userId}
    </update>

